/****** General ***********/
* {
    font-family: 'Raleway', sans-serif;
}

:root {
    --main-color: #0065FC;
    --main-bg-color: #F2F2F2;
    --filter-bg-color: #DEEBFF;
}

body {
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
}

h3 {
    font-size: 22px;
    font-weight: bold;
}

.Text-Bold-16 {
    font-size: 16px;
    font-weight: bold;
}

.Text-Bold-17 {
    font-size: 17px;
    font-weight: bold;
}

.Text-Bold-18 {
    font-size: 18px;
    font-weight: bold;
}

Header {
    width: 100%;
    background-color: lightgray;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-between;
}

.logo-booki {
    height: 19px;
    width: 61.09px;
    /* background-color:rgb(98, 24, 216);*/
    padding: 30px 50px 30px 50px;
}

header nav {
    height: 35px;
    width: 244px;
    margin-right: 50px;
    display: flex;
    justify-content: space-between;
}

.button-head-nav {
    text-decoration: none;
    color: black;
    border-top: solid;
    border-color: white;
    font-family: 'Raleway';
    font-style: normal;
    font-size: 16px;
    line-height: 35px;
}

.button-head-nav:hover {
    border-color: var(--main-color);
    color: var(--main-color);
}

.main-container {
    width: 100%;
    max-width: 1440px;
    padding: 0 50px;
    box-sizing: border-box;
}

.search-text {
    padding-bottom: 35px;
}

.search-bar {
    width: 377px;
    height: 49px;
    color: grey;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: solid;
    border-bottom: solid;
    border-top-color: var(--main-bg-color);
    border-bottom-color: var(--main-bg-color);
    border-radius: 15px 15px 15px 15px;
}

.logo-position {
    width: 50px;
    height: 49px;
    background-color: var(--main-bg-color);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 15px 0px 0px 15px;
}

.input-ville {
    width: 195px;
    height: 49px;
    color: black;
    font-size: 18px;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-width: 1px;
}

.filtres-bar {
    width:60%;
    display: flex;
    flex-direction: row;
    justify-content:left;
    gap:15px;
    padding-top: 35px;
    padding-bottom: 35px;
}

.filtres-bar-four-buttons {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: left;
    gap:15px;
}

.filtres-bar-two-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: left;
    gap:15px;
}

.filtres-bar-buttons {
    height: 50px;
    border: solid;
    border-color: var(--main-bg-color);
    border-radius: 25px 25px 25px 25px;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items:center;
    padding: 0px 20px 0px 20px;
    gap:15px;
}

.filtres-bar-buttons:hover {
    background-color: var(--filter-bg-color)
}
