.filtres-infos {
    display: flex;
    flex-direction: row;
    align-items:center;
    justify-content: left;
    gap:15px;
    padding-bottom: 35px;
}
.logo-infos {
    height: 24px;
    width: 24px;
    border: solid;
    border-color: var(--main-bg-color);
    border-radius: 24px 24px 24px 24px;
    display: flex;
    align-items:center;
    justify-content:center;
}

@media (min-width: 767.98px) {
    .logo-loupe {
        display: none;
    }

    .rechercher {
        color: white;
        height: 49px;
        width: 132px;
        background-color: var(--main-color);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 0px 15px 15px 0px;
    }
}

@media (max-width: 767.98px) {
    .logo-rechercher {
        display: none;
    }

    .rechercher {
        height: 49px;
        width: 49px;
        color: white;
        background-color: var(--main-color);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 15px 15px 15px 15px;
    }

    
}




/* Small devices (phones, less than 768px) */
@media (max-width: 767.98px) {
    Header {
        display: flex;
        width: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        /* background-color: greenyellow; */
        /*  align-items:stretch; */
    }

    header nav {
        /* background-color: violet; */
        height: 35px;
        width: 100%;
        margin-right: 0px;
        display: flex;
        justify-content: space-between;
    }

    .button-head-nav {
        width: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border-top: none;
        border-bottom: solid;
        border-color: white;
    }
}


.fa-solid {
    color: var(--main-color);
}

